{
  "dashboard": {
    "id": null,
    "title": "Secret Health & Production Monitoring",
    "tags": ["monitoring", "secrets", "production", "phoenix-real-estate"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üö® Critical Alert Status",
        "type": "stat",
        "targets": [
          {
            "expr": "secret_validation_status{environment=\"production\"}",
            "legendFormat": "Production Secrets",
            "refId": "A"
          },
          {
            "expr": "dead_mans_switch_critical_failures",
            "legendFormat": "Critical Workflow Failures",
            "refId": "B"
          },
          {
            "expr": "count(service_connectivity_status == 0)",
            "legendFormat": "Service Failures",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "FAILED"},
              {"type": "value", "value": "1", "text": "HEALTHY"}
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "horizontal",
          "textMode": "value_and_name"
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "üìä Secret Validation Status Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "secret_validation_status{environment=\"production\"}",
            "legendFormat": "Production Secrets",
            "refId": "A"
          },
          {
            "expr": "secret_validation_status{environment=\"test\"}",
            "legendFormat": "Test Secrets",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "lineWidth": 2,
              "fillOpacity": 10,
              "pointSize": 5
            },
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["last", "min", "max"]
          },
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "üåê Service Connectivity Status",
        "type": "timeseries",
        "targets": [
          {
            "expr": "service_connectivity_status{service=\"mongodb\"}",
            "legendFormat": "MongoDB Atlas",
            "refId": "A"
          },
          {
            "expr": "service_connectivity_status{service=\"maricopa_api\"}",
            "legendFormat": "Maricopa API",
            "refId": "B"
          },
          {
            "expr": "service_connectivity_status{service=\"webshare_proxy\"}",
            "legendFormat": "WebShare Proxy",
            "refId": "C"
          },
          {
            "expr": "service_connectivity_status{service=\"captcha_service\"}",
            "legendFormat": "2captcha Service",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "lineWidth": 2,
              "fillOpacity": 10,
              "pointSize": 5
            },
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["last", "min", "max"]
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 4,
        "title": "‚öôÔ∏è Dead Man's Switch Status",
        "type": "stat",
        "targets": [
          {
            "expr": "dead_mans_switch_critical_failures",
            "legendFormat": "Critical Failures",
            "refId": "A"
          },
          {
            "expr": "dead_mans_switch_warning_count",
            "legendFormat": "Warnings",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "textMode": "value_and_name"
        },
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "üí∞ Budget & Resource Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "budget_usage_percent",
            "legendFormat": "Budget Usage %",
            "refId": "A"
          },
          {
            "expr": "github_actions_quota_usage_percent",
            "legendFormat": "GitHub Actions Quota %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "orange", "value": 85},
                {"color": "red", "value": 95}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "horizontal",
          "textMode": "value_and_name"
        },
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "üìà Data Collection Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "data_collection_success_rate",
            "legendFormat": "Success Rate %",
            "refId": "A"
          },
          {
            "expr": "properties_collected_daily",
            "legendFormat": "Properties Collected Daily",
            "refId": "B"
          },
          {
            "expr": "llm_processing_success_rate",
            "legendFormat": "LLM Processing Success %",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "pointSize": 3
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "values": ["last", "mean", "max"]
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20}
      },
      {
        "id": 7,
        "title": "üîç System Health Summary",
        "type": "table",
        "targets": [
          {
            "expr": "label_replace(secret_validation_status, \"component\", \"Secret Validation\", \"__name__\", \".*\")",
            "format": "table",
            "refId": "A"
          },
          {
            "expr": "label_replace(service_connectivity_status, \"component\", \"Service Connectivity\", \"__name__\", \".*\")",
            "format": "table", 
            "refId": "B"
          },
          {
            "expr": "label_replace(system_health_status, \"component\", \"System Health\", \"__name__\", \".*\")",
            "format": "table",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"type": "value", "value": "0", "text": "‚ùå FAILED"},
              {"type": "value", "value": "1", "text": "‚úÖ HEALTHY"}
            ]
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "component"
            }
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 8,
        "title": "‚ö° Emergency Response Log",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"emergency-response\"} |= \"emergency\" or \"critical\" or \"recovery\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Critical Alerts",
          "datasource": "prometheus",
          "enable": true,
          "expr": "ALERTS{alertstate=\"firing\", severity=\"critical\"}",
          "iconColor": "red",
          "step": "60s",
          "tagKeys": "alertname,severity",
          "textFormat": "{{alertname}}: {{description}}",
          "titleFormat": "Critical Alert"
        },
        {
          "name": "Emergency Response",
          "datasource": "prometheus",
          "enable": true,
          "expr": "emergency_response_triggered == 1",
          "iconColor": "orange",
          "step": "60s",
          "tagKeys": "alert_type,severity",
          "textFormat": "Emergency response triggered: {{alert_type}}",
          "titleFormat": "Emergency Response"
        },
        {
          "name": "System Recovery",
          "datasource": "prometheus",
          "enable": true,
          "expr": "system_recovery_completed == 1",
          "iconColor": "green",
          "step": "60s",
          "tagKeys": "recovery_type",
          "textFormat": "System recovery completed: {{recovery_type}}",
          "titleFormat": "Recovery Complete"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(secret_validation_status, environment)",
          "refresh": 1,
          "includeAll": false,
          "multi": false,
          "current": {
            "value": "production",
            "text": "production"
          }
        },
        {
          "name": "time_range",
          "type": "interval",
          "query": "5m,15m,30m,1h,6h,12h,1d,2d,7d",
          "refresh": 2,
          "current": {
            "value": "30m",
            "text": "30m"
          }
        }
      ]
    },
    "links": [
      {
        "title": "Emergency Response Runbook",
        "url": "https://github.com/YOUR_REPO/blob/main/docs/operations/emergency-response-runbook.md",
        "type": "link",
        "icon": "doc",
        "tooltip": "Emergency response procedures and runbook"
      },
      {
        "title": "Secret Validation Workflow",
        "url": "https://github.com/YOUR_REPO/actions/workflows/validate-secrets.yml",
        "type": "link",
        "icon": "cloud",
        "tooltip": "Run secret validation workflow manually"
      },
      {
        "title": "Production Data Collection",
        "url": "https://github.com/YOUR_REPO/actions/workflows/data-collection-production.yml",
        "type": "link",
        "icon": "bolt",
        "tooltip": "View production data collection workflow"
      }
    ]
  }
}